  </div>
  <div class="row">
    <div class="col-sm-3" style="background-color:white;">
    	<h2>Goalkeepers</h2>
    	<% @goalkeepers.each do |p| %>
		<ul>
		<li>  
			<%= p.name %>
      <%= link_to "Edit |", edit_players_path(p.id) %>
      <b> <%= link_to "Delete", delete_players_path(p.id),
