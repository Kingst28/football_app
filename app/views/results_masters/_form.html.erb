
<%= simple_form_for(@results_master) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :player_id %>
    <%= f.input :played %>
    <%= f.input :scored %>
    <%= f.input :scorenum %>
    <%= f.input :conceded %>
    <%= f.input :concedednum %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
