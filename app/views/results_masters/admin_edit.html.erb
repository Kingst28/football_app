  <div align="center">
  <div class="row">
  <div class="col-sm-12" style="background-color:white;">
<%= form_tag edit_multiple_results_masters_path, method: :post do %>
<table id="myTable2">
  <tr>
    <th>Club</th>
    <th>Player</th>
    <th>Position</th>
    <th>Enter Results?</th>
  </tr>
<% for player in @results_masters %>
  <tr>
    <td><%=h Team.where(:id => player.player.teams_id).pluck(:name) %></td>
    <td><%=h player.player.name  %></td>
    <td><%=h player.player.position %></td>
    <td><input id="<%=player.id%>" value="<%=player.id%>" name="results_masters_ids[]" type="checkbox">&nbsp;<label for="<%=player.id%>"></label></td>
  </tr>
<% end %>
</table>
<div style="text-align:left"><%= submit_tag "Enter Results",  class: 'btn btn-default' %></div>
<% end %>
